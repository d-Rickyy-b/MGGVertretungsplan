<resources>
    <style name="DropDownMenuTheme" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>

    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:dropDownListViewStyle">@style/DropDownMenuTheme</item>
        <item name="dropDownListViewStyle">@style/DropDownMenuTheme</item>

        <item name="colorControlNormal">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorPrimaryInverse">@color/textColorInverse</item>
        <item name="android:alertDialogStyle">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:textColor">@drawable/two_value_colors_2</item>
        <item name="android:textColorSecondary">@drawable/two_value_colors</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BlueTheme" parent="AppTheme.Light">
        <item name="colorPrimary">#64b5f6</item>
        <item name="colorPrimaryDark">#2286c3</item>
        <item name="colorAccent">#4d2c91</item>
    </style>

    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PinkTheme" parent="AppTheme.Light">
        <item name="colorPrimary">#f06292</item>
        <item name="colorPrimaryDark">#ba2d65</item>
        <item name="colorAccent">#ff94c2</item>
    </style>

    <style name="GreenTheme" parent="AppTheme.Light">
        <item name="colorPrimary">#9ccc65</item>
        <item name="colorPrimaryDark">#6b9b37</item>
        <item name="colorAccent">#8d6e63</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="OrangeTheme" parent="AppTheme.Light">
        <item name="colorPrimary">#ff9800</item>
        <item name="colorPrimaryDark">#c66900</item>
        <item name="colorAccent">#9c64a6</item>
    </style>
</resources>
