<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Klasse">

        <ListPreference
            android:defaultValue="5"
            android:entries="@array/Klassenstufe_List"
            android:entryValues="@array/Klassenstufe_List"
            android:key="Klassenstufe"
            android:summary="Bitte wähle deine Stufe aus"
            android:title="Stufe" />

        <ListPreference
            android:defaultValue="a"
            android:entries="@array/Klassen_List"
            android:entryValues="@array/Klassen_List"
            android:key="Klasse"
            android:summary="Bitte wähle deine Klasse aus"
            android:title="Klasse" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/miscellaneous">

        <PreferenceScreen android:title="@string/notifications">
            <intent android:action="de.aurora.MggVertretungsplan.EINSTELLUNGEN" />
        </PreferenceScreen>

        <SwitchPreference
            android:defaultValue="true"
            android:key="AktTagAnzeigen"
            android:summary="Sollen alte Daten noch angezeigt werden?"
            android:title="Alte Tage zeigen"
            android:enabled="false" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="listColors"
            android:summary="Farbige Karten in der Übersicht zeigen"
            android:title="Farben" />


    </PreferenceCategory>
</PreferenceScreen>
